#!/bin/bash


source /usr/share/yunohost/helpers

#=================================================
# ENSURE DOWNWARD COMPATIBILITY
#=================================================
ynh_script_progression "Ensuring downward compatibility..."

ynh_app_setting_set_default --key=used_languages --value=en,fr
ynh_app_setting_set_default --key=cuda --value=cpu

# For the config_panel
ynh_app_setting_set_default --key=suggestions --value=false
ynh_app_setting_set_default --key=disable_files --value=false
ynh_app_setting_set_default	 --key=disable_webui --value=false

ynh_app_setting_set_default --key=charlimit --value=-1
ynh_app_setting_set_default --key=reqlimit --value=-1
ynh_app_setting_set_default --key=hourly_reqlimit --value=-1
ynh_app_setting_set_default --key=daily_reqlimit --value=-1
ynh_app_setting_set_default --key=flood_threshold --value=-1
ynh_app_setting_set_default --key=timecost --value=-1
ynh_app_setting_set_default --key=batchlimit --value=-1
ynh_app_setting_set_default --key=alternatives --value=-1

ynh_app_setting_set_default --key=language_source --value=auto
ynh_app_setting_set_default --key=language_target --value=locale
ynh_app_setting_set_default --key=timeout --value=500
ynh_app_setting_set_default --key=apikey_link --value=
ynh_app_setting_set_default --key=apikey_domain --value=

#=================================================
# STOP SYSTEMD SERVICE
#=================================================
ynh_script_progression "Stopping $app's systemd service..."

ynh_systemctl --service="$app" --action="stop"

#=================================================
# DOWNLOAD, CHECK AND UNPACK SOURCE
#=================================================
ynh_script_progression "Setting up source files..."

ynh_setup_source --dest_dir="$install_dir" --full_replace --keep="db"


#=================================================
# UPDATE A CONFIG FILE
#=================================================
ynh_script_progression "Updating $app's configuration files..."

ynh_config_add --template=".env" --destination="$install_dir/.env"

#=================================================
# INSTALL APP DEPENDENCIES
#=================================================
ynh_script_progression "Upgrading $app dependencies..."

pushd $install_dir
	ynh_exec_as_app python3 -m venv "$install_dir/venv"
	ynh_hide_warnings ynh_exec_as_app "$install_dir/venv/bin/pip" install --upgrade pip gunicorn
	ynh_hide_warnings ynh_exec_as_app "$install_dir/venv/bin/pip" install Babel==2.12.1 && ynh_hide_warnings ynh_exec_as_app "$install_dir/venv/bin/python" "$install_dir"/scripts/compile_locales.py
	
	if [ "$cuda" = "cuda" ]; then
	ynh_hide_warnings ynh_exec_as_app "$install_dir/venv/bin/pip" install --no-cache-dir torch==2.5.0 -f https://download.pytorch.org/whl/torch_stable.html

	else  
	ynh_hide_warnings ynh_exec_as_app "$install_dir/venv/bin/pip" install --no-cache-dir torch==2.5.0 --extra-index-url https://download.pytorch.org/whl/cpu
	ynh_hide_warnings ynh_exec_as_app "$install_dir/venv/bin/pip" install --no-cache-dir "numpy<2"
	fi
	
	ynh_hide_warnings ynh_exec_as_app "$install_dir/venv/bin/pip" install "$install_dir"/ --no-cache-dir 
popd

pushd "$install_dir"
	ynh_safe_rm "$install_dir/.cache/pip"
	ynh_safe_rm "$install_dir/docker"
	ynh_safe_rm "$install_dir/docker-compose.cuda.yml"
	ynh_safe_rm "$install_dir/docker-compose.yml"
	ynh_safe_rm "$install_dir/.dockerignore"
	ynh_safe_rm "$install_dir/docs"
	ynh_safe_rm "$install_dir/.env.save"
	ynh_safe_rm "$install_dir/k8s.yaml"
	ynh_safe_rm "$install_dir/.pre-commit-config.yaml"
popd

#=================================================
# REAPPLY SYSTEM CONFIGURATIONS
#=================================================
ynh_script_progression "Upgrading system configurations related to $app..."

# Create a dedicated NGINX config
ynh_config_add_nginx

# Create a dedicated systemd config
ynh_config_add_systemd

yunohost service add "$app" --description="Machine Translation API" --log="/var/log/$app/$app.log"

# Use logrotate to manage app-specific logfile(s)
ynh_config_add_logrotate

#=================================================
# START SYSTEMD SERVICE
#=================================================
ynh_script_progression "Starting $app's systemd service..."

ynh_systemctl --service="$app" --action="start"

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression "Upgrade of $app completed"
